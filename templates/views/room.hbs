<body>

    <div class="container">
        <div class="left">
            <div class="container_video">
                <div id="video-grid">

                </div>
            </div>
            <div class="controls">
                <div class="controls_column">

                    <div class="controls_button" id="microphone_button">
                        <i class="fa fa-microphone-slash"></i>
                        <span>Unmute</span>
                    </div>
                    <div class="controls_button" id="video_button">
                        <i class="fa fa-video-camera"></i>
                        <span>Stop video</span>
                    </div>
                </div>
                <div class="controls_column middle">
                    <div class="controls_button" id="shareScreen">

                        <i class="fab fa-slideshare"></i>
                        <span>Share screen</span>
                    </div>
                    {{!-- <div class="controls_button" id="recording_button">

                        <i class="fas fa-play-circle"></i>
                        <span>Start Recording</span>
                    </div> --}}
                    <div class="controls_button" id="copy_link" tabindex="0" data-bs-toggle="popover"
                        data-bs-placement="top" data-bs-content="Link Copied">
                        <i class="fa fa-link"></i>
                        <span>Meet Link</span>
                    </div>
                </div>
                <div class="controls_column">
                    <div onclick="location.href = '/end_meet' " class="controls_button leave_meeting ">
                        <i class="fa fa-sign-out"></i>
                        <span>Leave Meeting</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="right">
            <h4 class="chat_header">Chat</h4>
            <div class="container_chat" id="container_chat">
                <ul class="container_messages">

                </ul>
            </div>
            <div class="container_message_input">
                <input type="text" id="message_input" placeholder="Type your text here...">

            </div>
        </div>
    </div>
    <!-- Button trigger modal -->
    <button type="button" id="launch_modal" class="btn btn-primary" data-bs-toggle="modal"
        data-bs-target="#staticBackdrop">
        Username modal
    </button>
